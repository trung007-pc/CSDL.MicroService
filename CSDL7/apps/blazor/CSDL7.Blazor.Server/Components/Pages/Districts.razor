

@page "/districts"

@attribute [Authorize(MasterServicePermissions.Districts.Default)]
@using CSDL7.MasterService.Services.Dtos.Districts
@using CSDL7.MasterService.Services.Districts
@using CSDL7.MasterService.Localization
@using CSDL7.MasterService.Services.Dtos.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Web
@using Blazorise
@using Blazorise.Components
@using Blazorise.DataGrid
@using Volo.Abp.BlazoriseUI
@using Volo.Abp.BlazoriseUI.Components
@using Volo.Abp.ObjectMapping
@using Volo.Abp.AspNetCore.Components.Messages
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout

@using CSDL7.MasterService.Permissions
@using Volo.Abp.AspNetCore.Components.Web
@using Volo.Abp.AspNetCore.Components


@inherits CSDL7ComponentBase
@inject IDistrictsAppService DistrictsAppService

@inject IUiMessageService UiMessageService
@inject IStringLocalizer<MasterServiceResource> L



@* ************************* PAGE HEADER ************************* *@
<PageHeader Title="@L["Districts"]" BreadcrumbItems="BreadcrumbItems" Toolbar="Toolbar">

</PageHeader>

<style>
    tr.table-row-selectable:hover {
        cursor: default;
    }
</style>

@* ************************* SEARCH ************************* *@
<Card>
    <CardBody>

        <Row>
            <div class="col col-md-8 col-lg-10">
                <div class="mb-3">
                    <Form id="DistrictSearchForm">
                        <Addons>
                            <Addon AddonType="AddonType.Body">
                                <TextEdit @bind-Text="@Filter.FilterText"
                                        Autofocus="true"
                                        Placeholder="@L["Search"]">
                                </TextEdit>
                            </Addon>
                            <Addon AddonType="AddonType.End">
                                <SubmitButton Form="DistrictSearchForm" Clicked="GetDistrictsAsync">
                                    <Icon Name="IconName.Search" Class="me-1"></Icon>@L["Search"]
                                </SubmitButton>
                            </Addon>
                        </Addons>
                    </Form>
                </div>
            </div>
                
                   <div class="col-md-4 col-lg-2">
            <div class="mb-3">
               <Button Color="Color.Primary" Outline Style="width:100%" id="AdvancedFilterSectionToggler"
                         Clicked="@(() => ShowAdvancedFilters = !ShowAdvancedFilters)">@L["Filters"]
                         <i aria-hidden="true" class="fa ms-1 @(!ShowAdvancedFilters ? "fa-angle-down" : "fa-angle-up")"></i>
               </Button>
            </div>
       </div>
        
        <div style="display: @(!ShowAdvancedFilters ? "none" : "block")"  class="mt-3">
            <Row>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Name"]</FieldLabel>
                        <TextEdit Text="@Filter.Name" TextChanged="@OnNameChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Code"]</FieldLabel>
                        <TextEdit Text="@Filter.Code" TextChanged="@OnCodeChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Province"]</FieldLabel>
                        <Select TValue="Guid?"
		SelectedValue="@Filter.ProvinceId"
		SelectedValueChanged="@OnProvinceIdChangedAsync">

<SelectItem></SelectItem>

@foreach(var item in ProvincesCollection)
{
	<SelectItem TValue="Guid" Value="@item.Id">
		@item.DisplayName
	</SelectItem>
}

</Select>                       
                    </Field>
                </Column>
            </Row>

        </div>

        </Row>


    </CardBody>
</Card>

@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>
        <DataGrid TItem="DistrictWithNavigationPropertiesDto"
                  @ref="DataGridRef"
                  Data="DistrictList"
                  
                  
                  
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                
                
                <DataGridEntityActionsColumn TItem="DistrictWithNavigationPropertiesDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="DistrictWithNavigationPropertiesDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="DistrictWithNavigationPropertiesDto"
                                          Visible="@CanEditDistrict"
                                          Clicked="async () => await OpenEditDistrictModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="DistrictWithNavigationPropertiesDto"
                                          Visible="@CanDeleteDistrict"
                                          Clicked="() => DeleteDistrictAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>

                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
               
              <DataGridColumn TItem="DistrictWithNavigationPropertiesDto"
                      Field="District.Name"
                      Caption="@L["Name"]">
              </DataGridColumn>

              <DataGridColumn TItem="DistrictWithNavigationPropertiesDto"
                      Field="District.Code"
                      Caption="@L["Code"]">
              </DataGridColumn>

              <DataGridColumn TItem="DistrictWithNavigationPropertiesDto"
                      Field="Province.Name"
                      Caption="@L["Province"]">
              </DataGridColumn>

            </DataGridColumns>
            
            
        </DataGrid>
    </CardBody>
</Card>

@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateDistrictModal" Closing="@CreateDistrictModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">

        <Form id="CreateDistrictForm">
            <ModalHeader>
                <ModalTitle>@L["NewDistrict"]</ModalTitle>
                <CloseButton Clicked="CloseCreateDistrictModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewDistrictValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewDistrict"
                            ValidateOnLoad="false">
                    
                    
                    <Validation>
                        <Field>
                            <FieldLabel>@L["Name"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewDistrict.Name"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation>
                        <Field>
                            <FieldLabel>@L["Code"]</FieldLabel>
                            <TextEdit @bind-Text="@NewDistrict.Code"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Field>
                        <FieldLabel>@L["Province"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@NewDistrict.ProvinceId">
                            @foreach (var province in ProvincesCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(province.Id)">
                                    @(province.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>


                    
                    
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateDistrictModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateDistrictForm" Clicked="CreateDistrictAsync"/>

            </ModalFooter>
        </Form>

    </ModalContent>
</Modal>

@* ************************* EDIT MODAL ************************* *@
<Modal @ref="EditDistrictModal" Closing="@EditDistrictModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">

        <Form id="EditDistrictForm">
            <ModalHeader>
                <ModalTitle>@L["Update"]</ModalTitle>
                <CloseButton Clicked="CloseEditDistrictModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@EditingDistrictValidations"
                            Mode="ValidationMode.Auto"
                            Model="@EditingDistrict"
                            ValidateOnLoad="false">
                    
                    
                    <Validation>
                        <Field>
                            <FieldLabel>@L["Name"] *</FieldLabel>
                            <TextEdit @bind-Text="@EditingDistrict.Name"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation>
                        <Field>
                            <FieldLabel>@L["Code"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingDistrict.Code"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Field>
                        <FieldLabel>@L["Province"]</FieldLabel>
                        <Select TValue="Guid" @bind-SelectedValue="@EditingDistrict.ProvinceId">
                            @foreach (var province in ProvincesCollection)
                            {
                                <SelectItem TValue="Guid" Value="@(province.Id)">
                                    @(province.DisplayName)
                                </SelectItem>
                            }
                        </Select>
                    </Field>


                    
                    
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditDistrictModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditDistrictForm" Clicked="UpdateDistrictAsync" />

            </ModalFooter>
        </Form>

    </ModalContent>
</Modal>


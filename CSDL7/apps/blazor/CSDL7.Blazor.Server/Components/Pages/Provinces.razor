

@page "/provinces"

@attribute [Authorize(MasterServicePermissions.Provinces.Default)]
@using CSDL7.MasterService.Services.Dtos.Provinces
@using CSDL7.MasterService.Services.Provinces
@using CSDL7.MasterService.Localization
@using CSDL7.MasterService.Services.Dtos.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Web
@using Blazorise
@using Blazorise.Components
@using Blazorise.DataGrid
@using Volo.Abp.BlazoriseUI
@using Volo.Abp.BlazoriseUI.Components
@using Volo.Abp.ObjectMapping
@using Volo.Abp.AspNetCore.Components.Messages
@using Volo.Abp.AspNetCore.Components.Web.Theming.Layout

@using CSDL7.MasterService.Permissions
@using Volo.Abp.AspNetCore.Components.Web
@using Volo.Abp.AspNetCore.Components


@inherits CSDL7ComponentBase
@inject IProvincesAppService ProvincesAppService

@inject IUiMessageService UiMessageService
@inject IStringLocalizer<MasterServiceResource> L



@* ************************* PAGE HEADER ************************* *@
<PageHeader Title="@L["Provinces"]" BreadcrumbItems="BreadcrumbItems" Toolbar="Toolbar">

</PageHeader>

<style>
    tr.table-row-selectable:hover {
        cursor: default;
    }
</style>

@* ************************* SEARCH ************************* *@
<Card>
    <CardBody>

        <Row>
            <div class="col col-md-8 col-lg-10">
                <div class="mb-3">
                    <Form id="ProvinceSearchForm">
                        <Addons>
                            <Addon AddonType="AddonType.Body">
                                <TextEdit @bind-Text="@Filter.FilterText"
                                        Autofocus="true"
                                        Placeholder="@L["Search"]">
                                </TextEdit>
                            </Addon>
                            <Addon AddonType="AddonType.End">
                                <SubmitButton Form="ProvinceSearchForm" Clicked="GetProvincesAsync">
                                    <Icon Name="IconName.Search" Class="me-1"></Icon>@L["Search"]
                                </SubmitButton>
                            </Addon>
                        </Addons>
                    </Form>
                </div>
            </div>
                
                   <div class="col-md-4 col-lg-2">
            <div class="mb-3">
               <Button Color="Color.Primary" Outline Style="width:100%" id="AdvancedFilterSectionToggler"
                         Clicked="@(() => ShowAdvancedFilters = !ShowAdvancedFilters)">@L["Filters"]
                         <i aria-hidden="true" class="fa ms-1 @(!ShowAdvancedFilters ? "fa-angle-down" : "fa-angle-up")"></i>
               </Button>
            </div>
       </div>
        
        <div style="display: @(!ShowAdvancedFilters ? "none" : "block")"  class="mt-3">
            <Row>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["Name"]</FieldLabel>
                        <TextEdit Text="@Filter.Name" TextChanged="@OnNameChangedAsync" />                       
                    </Field>
                </Column>
                <Column ColumnSize="ColumnSize.Is3">
                    <Field>
                        <FieldLabel>@L["ProvinceCode"]</FieldLabel>
                        <TextEdit Text="@Filter.ProvinceCode" TextChanged="@OnProvinceCodeChangedAsync" />                       
                    </Field>
                </Column>
            </Row>

        </div>

        </Row>


    </CardBody>
</Card>

@* ************************* DATA GRID ************************* *@
<Card>
    <CardBody>
        <DataGrid TItem="ProvinceDto"
                  @ref="DataGridRef"
                  Data="ProvinceList"
                  
                  
                  
                  ReadData="OnDataGridReadAsync"
                  TotalItems="TotalCount"
                  ShowPager="true"
                  Responsive="true"
                  PageSize="PageSize"
                  Class="datagrid-detail">
            <LoadingTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                       <RadarSpinner />
                    </Column>
                </Row>
            </LoadingTemplate>
            <EmptyTemplate>
                <Row Class="w-100 align-items-center" Style="height: 150px;">
                    <Column>
                        <Heading Size="HeadingSize.Is4" TextAlignment="TextAlignment.Center">@L["NoDataAvailable"]</Heading>
                    </Column>
                </Row>
            </EmptyTemplate>   
            <DataGridColumns>
                
                
                <DataGridEntityActionsColumn TItem="ProvinceDto" @ref="@EntityActionsColumn">
                    <DisplayTemplate>
                        <EntityActions TItem="ProvinceDto" EntityActionsColumn="@EntityActionsColumn">
                            <EntityAction TItem="ProvinceDto"
                                          Visible="@CanEditProvince"
                                          Clicked="async () => await OpenEditProvinceModalAsync(context)"
                                          Text="@L["Edit"]"></EntityAction>
                            <EntityAction TItem="ProvinceDto"
                                          Visible="@CanDeleteProvince"
                                          Clicked="() => DeleteProvinceAsync(context)"
                                          ConfirmationMessage="@(()=> L["DeleteConfirmationMessage"])"
                                          Text="@L["Delete"]"></EntityAction>

                        </EntityActions>
                    </DisplayTemplate>
                </DataGridEntityActionsColumn>
               
              <DataGridColumn TItem="ProvinceDto"
                      Field="Name"
                      Caption="@L["Name"]">
              </DataGridColumn>

              <DataGridColumn TItem="ProvinceDto"
                      Field="ProvinceCode"
                      Caption="@L["ProvinceCode"]">
              </DataGridColumn>

            </DataGridColumns>
            
            
        </DataGrid>
    </CardBody>
</Card>

@* ************************* CREATE MODAL ************************* *@
<Modal @ref="CreateProvinceModal" Closing="@CreateProvinceModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">

        <Form id="CreateProvinceForm">
            <ModalHeader>
                <ModalTitle>@L["NewProvince"]</ModalTitle>
                <CloseButton Clicked="CloseCreateProvinceModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@NewProvinceValidations"
                            Mode="ValidationMode.Auto"
                            Model="@NewProvince"
                            ValidateOnLoad="false">
                    
                    
                    <Validation>
                        <Field>
                            <FieldLabel>@L["Name"] *</FieldLabel>
                            <TextEdit @bind-Text="@NewProvince.Name"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation>
                        <Field>
                            <FieldLabel>@L["ProvinceCode"]</FieldLabel>
                            <TextEdit @bind-Text="@NewProvince.ProvinceCode"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    
                    
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseCreateProvinceModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="CreateProvinceForm" Clicked="CreateProvinceAsync"/>

            </ModalFooter>
        </Form>

    </ModalContent>
</Modal>

@* ************************* EDIT MODAL ************************* *@
<Modal @ref="EditProvinceModal" Closing="@EditProvinceModal.CancelClosingModalWhenFocusLost">
    <ModalContent Centered="true">

        <Form id="EditProvinceForm">
            <ModalHeader>
                <ModalTitle>@L["Update"]</ModalTitle>
                <CloseButton Clicked="CloseEditProvinceModalAsync" />
            </ModalHeader>
            <ModalBody>
                <Validations @ref="@EditingProvinceValidations"
                            Mode="ValidationMode.Auto"
                            Model="@EditingProvince"
                            ValidateOnLoad="false">
                    
                    
                    <Validation>
                        <Field>
                            <FieldLabel>@L["Name"] *</FieldLabel>
                            <TextEdit @bind-Text="@EditingProvince.Name"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    <Validation>
                        <Field>
                            <FieldLabel>@L["ProvinceCode"]</FieldLabel>
                            <TextEdit @bind-Text="@EditingProvince.ProvinceCode"  >
                                <Feedback>
                                    <ValidationError />
                                </Feedback>
                            </TextEdit>
                        </Field>
                    </Validation>


                    
                    
                </Validations>
            </ModalBody>
            <ModalFooter>
                <Button Color="Color.Secondary"
                        Clicked="CloseEditProvinceModalAsync">
                    @L["Cancel"]
                </Button>
                <SubmitButton Form="EditProvinceForm" Clicked="UpdateProvinceAsync" />

            </ModalFooter>
        </Form>

    </ModalContent>
</Modal>

